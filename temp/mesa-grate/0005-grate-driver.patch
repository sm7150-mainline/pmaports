+int
+grate_pixel_format(enum pipe_format format)
+{
+   switch (format) {
+   case PIPE_FORMAT_A8_UNORM:
+      return TGR3D_PIXEL_FORMAT_A8;
+   case PIPE_FORMAT_L8_UNORM:
