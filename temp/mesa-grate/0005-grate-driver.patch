+   if (err < 0) {
+      fprintf(stderr, "drm_tegra_bo_from_name() failed: %d\n", err);
+      FREE(resource);
+      return NULL;
+   }
+
+   resource->pitch = handle->stride;
+
+   format = grate_pixel_format(template->format);
+   assert(format >= 0);
+   resource->format = format;
+
+   return &resource->base.b;
