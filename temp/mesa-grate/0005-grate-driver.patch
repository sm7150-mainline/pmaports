+
+      case PIPE_SHADER_CAP_MAX_CONST_BUFFER_SIZE:
+      case PIPE_SHADER_CAP_MAX_CONST_BUFFERS:
+         return 32;
+
+      case PIPE_SHADER_CAP_MAX_TEMPS:
+         return 16; /* scalars */
+
+      /* no indirection */
