package() {
    mkdir -p "$pkgdir/usr/$_target"
    cd "$pkgdir/usr/$_target"
    # Use 'busybox tar' to avoid 'tar: Child returned status 141'
    # on some machines (builds.sr.ht, gitlab-ci). See pmaports#26.
