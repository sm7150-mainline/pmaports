pkgname=postmarketos-ui-gnome-mobile
pkgver=2
pkgrel=2
pkgdesc="(Wayland) Gnome Shell patched to adapt better to phones (Experimental)"
url="https://gnome.org/"
arch="noarch !armhf !riscv64" # gnome-shell / riscv64: mutter-mobile
license="GPL-3.0-or-later"
depends="
	bolt
	dbus-x11
	gdm
	gnome-backgrounds
	gnome-browser-connector
	gnome-control-center
	gnome-initial-setup
	gnome-keyring
	gnome-online-accounts
	gnome-remote-desktop
	gnome-shell-extensions
	gnome-shell-mobile
	gnome-user-docs
	gsettings-desktop-schemas
	gvfs
	networkmanager-elogind
	pinentry-gnome
	polkit-gnome
	postmarketos-artwork-wallpapers-gnome
	postmarketos-base-ui-gnome
	tracker
	tracker-miners
	udisks2
	xwayland
	"
_pmb_recommends="
	calls
	chatty
	firefox-esr
	font-noto
	font-noto-emoji
	gnome-text-editor
	gnome-calculator
	gnome-clocks
	gnome-contacts
	gnome-software
	gnome-software-plugin-apk
	karlender
	kgx
	lollypop
	loupe
	mobile-config-firefox
	portfolio
	postmarketos-default-camera
	postmarketos-tweaks
	postmarketos-welcome
	postprocessd
	ttyescape
	xdg-user-dirs
	"
install="$pkgname.post-install $pkgname.post-upgrade"
source="
	20_pmOS-wallpaper-gnome-mobile.gschema.override
	firefox-wayland.sh
	"
options="!check"

package() {
	install -Dm755 \
		"$srcdir"/firefox-wayland.sh \
		-t "$pkgdir"/etc/profile.d/

	install -Dm644 -t "$pkgdir"/usr/share/glib-2.0/schemas \
		"$srcdir"/20_pmOS-wallpaper-gnome-mobile.gschema.override
}
